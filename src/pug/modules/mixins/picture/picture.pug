mixin icon(viewBox, width, height, id)
    svg(viewBox=viewBox, width=width, height=height)
        use(xlink:href=id)

mixin picture(alt, type, path, path2x)
    picture
        source(type=type, media=mediaArr[0], srcset=(path + webp + ' 1x' + ', ' + path2x + webp + ' 2x' ))
        source(type=type, media=mediaArr[1], srcset=(path  + webp + ' 1x' + ', ' + path2x  + webp + ' 2x' ))
        img(src=path + jpg, loading="lazy", decoding="async", alt=alt)

