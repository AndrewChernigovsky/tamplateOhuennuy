mixin logo(alt, type, path, path2x)
    picture
        if (logoMedia == 0)
            source(type=type, media=mediaArr[0], srcset=(path + webp + ' 1x' + ', ' + path2x + webp + ' 2x' ))
            source(media=mediaArr[0], srcset=(path + png + ' 1x' + ', ' + path2x + png + ' 2x' ))

        if jpgType
            img(src=path + jpg,  srcset=(path + jpg + ' 1x' + ', ' + path2x + jpg + ' 2x' ), loading="lazy", decoding="async", alt=alt)
        else
            img(src=path + png, loading="lazy", decoding="async", alt=alt)